<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImageView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Circle</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">#262626</item>
    </style>

    <style name="PopupMenuTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="android:background">#262626</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomCalendarStyle" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:colorBackground">#262626</item>
        <item name="materialCalendarHeaderLayout">@style/CustomHeaderStyle</item>
        <item name="materialCalendarHeaderTitle">@style/CustomHeaderTextStyle</item>
        <item name="materialCalendarHeaderDivider">@android:color/transparent</item>
        <item name="materialCalendarHeaderSelection">@style/CustomHeaderSelectionStyle</item>
        <item name="materialCalendarDay">@style/CustomCalendarDayStyle</item>
    </style>

    <style name="CustomHeaderStyle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">#1A1A1A</item>
    </style>

    <style name="CustomHeaderTextStyle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomHeaderSelectionStyle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomCalendarDayStyle" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">#262626</item>
        <item name="android:colorBackground">#262626</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:buttonBarButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="CustomDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:background">#262626</item>
        <item name="android:calendarTextColor">@color/white</item>
        <item name="android:headerBackground">#1A1A1A</item>
        <item name="android:dayOfWeekBackground">#262626</item>
        <item name="android:dayOfWeekTextAppearance">@style/DatePickerTextAppearance</item>
        <item name="android:headerMonthTextAppearance">@style/DatePickerTextAppearance</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/DatePickerTextAppearance</item>
        <item name="android:headerYearTextAppearance">@style/DatePickerTextAppearance</item>
    </style>

    <style name="DatePickerTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DarkAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#262626</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="EditItemTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="boxBackgroundColor">#1A1A1A</item>
    </style>
</resources> 